module lists
imports strategolib

signature
  sorts List
  constructors
    Nil   :                List(a)
    Cons  : a * List(a) -> List(a)

strategies
  s =
    match sequential
      case | [1 | _]: !1
      case | [_, 1 | _]: !3
      case | [_ | [2, 3]]: !2
    end

  main =
    test-suite(
      !"multimatch on some lists"
    , list1
    ; list2
    ; list3
    ; list4
    )

  list1 =
    apply-test(
      !"list1"
    , s
    , ![1, 2, 3]
    , !1
    )

  list2 =
    apply-test(
      !"list2"
    , s
    , ![2, 2, 3]
    , !2
    )

  list3 =
    apply-test(
      !"list3"
    , s
    , ![0, 1, 1]
    , !3
    )

  list4 =
    apply-and-fail(
      !"list4"
    , s
    , ![0, 2, 8]
    )
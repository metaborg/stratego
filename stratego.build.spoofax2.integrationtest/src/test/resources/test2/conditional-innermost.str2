module conditional-innermost
imports list-cons
signature
  sorts Nat
  constructors
    Zero : Nat
    Succ : Nat -> Nat
    Plus : Nat * Nat -> Nat

strategies

  bottomup(s) =
    rec x(all(x); s)

  innermost(s) = 
    bottomup(red(s))

  red(s) = 
    rec x(s; bottomup(x) <+ id)

  nf(s) = 
    bottomup(not(s))

rules

  A : Plus(Zero(), x) -> x

  B : Plus(Succ(x), y) -> Succ(Plus(x, z))
      where <id> y => z

strategies

  main = innermost(A + B)
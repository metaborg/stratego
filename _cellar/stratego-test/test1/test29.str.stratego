module test29
imports libstratego-lib
signature
  sorts Exp Type
  constructors
    Var  : String -> Exp
    Plus : Exp * Exp -> Exp

strategies

  main = 
    test-suite(!"test29",
      test1;
      test2;
      test3;
      test4;
      test5
    )

  test1 =
    apply-test(!"test1"
	, id
	, !Plus(Var("a"), Var("b"))
	, !Plus(Var("a"), Var("b"))
	)

  test2 =
    apply-test(!"test2a"
	, all(id)
	, !Plus(Var("a"), Var("b"))
	, !Plus(Var("a"), Var("b"))
	);
    apply-test(!"test2b"
	, all(id)
	, !Var("a")
	, !Var("a")
	);
    apply-test(!"test2c"
	, all(id)
	, !"a"
	, !"a"
	)

  test3 =
    apply-test(!"test3a" 
	, topdown(id)
	, !"a"
	, !"a"
	);
    apply-test(!"test3b"
	, topdown(id)
	, !Var("a")
	, !Var("a")
	);
    apply-test(!"test3c"
	, topdown(id)
	, !Plus(Var("a"), Var("b"))
	, !Plus(Var("a"), Var("b"))
	)

  test4 =
    apply-test(!"test4a"
	, bottomup(id)
	, !"a"
	, !"a"
	);
    apply-test(!"test4b"
	, bottomup(id)
	, !Var("a")
	, !Var("a")
	);
    apply-test(!"test4c"
	, bottomup(id)
	, !Plus(Var("a"), Var("b"))
	, !Plus(Var("a"), Var("b"))
	)

  test5 =
    apply-test(!"test5"
	, topdown(try(is-string; !"A"))
	, !Plus(Var("a"), Var("b"))
	, !Plus(Var("A"), Var("A"))
	)


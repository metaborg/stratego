module test32
imports collection/list/cons collection/tuple/cons

signature
  constructors
    Zero : Exp
    Succ : Exp -> Exp
    Plus : Exp * Exp -> Exp

strategies

  main = 
    <reduce> Plus(Succ(Succ(Zero)), Succ(Zero))

  try(s) = s <+ id

  reduce = all(reduce); try({?x ; apply(A + B | x)}; reduce)

  apply(f | x) = <f> x

  A = ?Plus(Zero, y); a(|y)
  B = ?Plus(Succ(x), y); b(|x, y)

  a(|y) = !y
  b(|x, y) = !Succ(Plus(x, y))

